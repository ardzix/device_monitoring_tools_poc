# Django Configuration
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Database Configuration
USE_POSTGRES=False  # Set to True to use PostgreSQL, False for SQLite

# SQLite Configuration (used if USE_POSTGRES=False)
SQLITE_NAME=db.sqlite3

# PostgreSQL Configuration (used if USE_POSTGRES=True)
POSTGRES_DB=employeemonitoring
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_db_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Server Configuration
DJANGO_HOST=localhost
DJANGO_PORT=8000
DJANGO_BASE_URL=http://localhost:8000

# Go Agent Configuration
AGENT_SCREENSHOT_INTERVAL=30s
AGENT_ANALYSIS_CONFIDENCE_THRESHOLD=0.7
AGENT_LOG_LEVEL=info

# Monitoring Configuration
MONITOR_APP_USAGE=True
MONITOR_WEBSITE_VISITS=True
MONITOR_FILE_ACCESS=True
MONITOR_USB_DEVICES=True
MONITOR_CLIPBOARD=True
MONITOR_KEYLOGGING=False  # Disabled by default for privacy

# Storage Configuration
USE_S3=False  # Set to True to use S3, False for local storage

# S3 Configuration (used if USE_S3=True)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_ENDPOINT_URL=https://your-s3-endpoint
AWS_S3_REGION_NAME=your-region
AWS_DEFAULT_ACL=private
AWS_S3_FILE_OVERWRITE=False
AWS_QUERYSTRING_AUTH=True

# Local Storage Configuration (used if USE_S3=False)
MEDIA_ROOT=media
SCREENSHOTS_DIR=screenshots
LOGS_DIR=logs

# Host Configuration
HOST_URL=http://localhost:8000
HOST_USERNAME=admin
HOST_PASSWORD=your_password_here

# Security
API_KEY=your_api_key_here

# Monitoring Intervals (in seconds)
APP_MONITOR_INTERVAL=1
WEBSITE_MONITOR_INTERVAL=1
FILE_MONITOR_INTERVAL=5
USB_MONITOR_INTERVAL=5
SCREENSHOT_INTERVAL=30
SEND_DATA_INTERVAL=10

# Screenshot Configuration
SCREENSHOT_DIR=screenshots 